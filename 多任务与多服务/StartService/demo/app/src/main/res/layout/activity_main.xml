<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_btn_startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动后台音乐服务程序"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        android:id="@+id/main_btn_startService2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动后台音乐服务程序2"
        app:layout_constraintTop_toBottomOf="@id/main_btn_startService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/main_btn_stopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭后台音乐服务程序"
        app:layout_constraintTop_toBottomOf="@id/main_btn_startService2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>