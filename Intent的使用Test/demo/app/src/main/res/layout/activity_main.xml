<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/main_et_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/main_et_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/main_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"
            android:onClick="sendData"/>

    </LinearLayout>

    <Button
        android:id="@+id/main_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intent的显式调用"
        android:onClick="startIntent"/>

    <Button
        android:id="@+id/main_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intent的隐式式调用"
        android:onClick="startIntent"/>

    <Button
        android:id="@+id/main_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intent的Action1"
        android:onClick="startIntent"/>

    <Button
        android:id="@+id/main_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intent的Action2"
        android:onClick="startIntent"/>

    <Button
        android:id="@+id/main_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intent的Action3"
        android:onClick="startIntent"/>

    <Button
        android:id="@+id/main_btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intent的Category1"
        android:onClick="startIntent"/>

    <Button
        android:id="@+id/main_btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intent的Catgory2"
        android:onClick="startIntent"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/main_rg_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/main_rb_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开淘宝"/>

                <RadioButton
                    android:id="@+id/main_rb_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通话"/>

                <RadioButton
                    android:id="@+id/main_rb_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拨号"/>

                <RadioButton
                    android:id="@+id/main_rb_btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开地图"/>

                <RadioButton
                    android:id="@+id/main_rb_btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开地图查询"/>

                <RadioButton
                    android:id="@+id/main_rb_btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开摄像头"/>

                <RadioButton
                    android:id="@+id/main_rb_btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开联系人"/>

                <RadioButton
                    android:id="@+id/main_rb_btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开联系人中的某人"/>
            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送意图"
                android:onClick="sendIntent"/>
        </GridLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>